<%# if @presenter&.respond_to? :download_path_link %>
<%# download_path_link = @presenter.download_path_link( main_app: main_app, curation_concern: file_set ) %>
<%# else %>
<%# download_path_link = hyrax.download_path( file_set ) %>
<%# end %>
<% if Hyrax.config.display_media_download_link? && presenter.can_download_file? %>
    <div>
      <h2 class="sr-only"><%= t('hyrax.file_set.show.downloadable_content.heading') %></h2>
      <audio controls="controls" class="audiojs" style="width:100%" controlsList="nodownload" preload="auto">
        <source src="<%= hyrax.download_path(file_set, file: 'ogg') %>" type="audio/ogg" />
        <source src="<%= hyrax.download_path(file_set, file: 'mp3') %>" type="audio/mpeg" />
        Your browser does not support the audio tag.
      </audio>
      <%= link_to t('hyrax.file_set.show.downloadable_content.audio_link'),
                  presenter.download_path_link( main_app: main_app, curation_concern: file_set ),
                  data: { label: file_set.id },
                  target: :_blank,
                  id: "file_download" %>
    </div>
<% else %>
    <div>
      <audio controls="controls" class="audiojs" style="width:100%" controlsList="nodownload" preload="auto">
        <source src="<%= hyrax.download_path(file_set, file: 'ogg') %>" type="audio/ogg" />
        <source src="<%= hyrax.download_path(file_set, file: 'mp3') %>" type="audio/mpeg" />
        Your browser does not support the audio tag.
      </audio>
    </div>
<% end %>

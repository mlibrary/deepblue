<div class="card tabs work-tabs">
  <ul class="nav nav-tabs" role="tablist">
    <li id="items_display_link" class="nav-item">
      <a href="#items_display" data-toggle="tab"> <%= t('show.labels.tab_item') %></a>
    </li>
    <li id="read_me_display_link" class="nav-item">
      <a href="#read_me_display" data-toggle="tab"> <%= t('show.labels.tab_read_me') %></a>
    </li>
    <% if @presenter.display_provenance_log_enabled? %>
    <li id="provenance_log_display_link" class="nav-item">
      <a href="#provenance_log_display" data-toggle="tab"> <%= t('show.labels.tab_provenance_log') %></a>
    </li>
    <% end %>
  </ul>
  <div class="tab-content">
    <div id="items_display" class="tab-pane active">
      <%= render 'items', presenter: @presenter %>
    </div>
    <%= render "read_me", presenter: @presenter %>
    <%= render "provenance_log", presenter: @presenter %>
  </div>
</div>

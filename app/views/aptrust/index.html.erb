<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Timestamp</th>
      <th>NOID</th>
      <th>Event</th>
      <th>Event Note</th>
      <th>Updated</th>
      <th>Created</th>
    </tr>
  </thead>

  <tbody>
    <% @aptrust_statuses.each do |status| %>
      <tr>
        <td><%= status.id %></td>
        <td><%= status.timestamp %></td>
        <td><%= status.noid %></td>
        <td><%= status.event %></td>
        <td><%= status.event_note %></td>
        <td><%= status.updated_at %></td>
        <td><%= status.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

